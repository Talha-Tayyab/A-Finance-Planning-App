<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Budgets</title>
  </head>
  <body>
    <h1>Budgets</h1>
    <ul>
      <% budgets.forEach(budget => { %>
      <li>
        <%= budget.name %>: <%= budget.amount %>
        <form
          action="/delete/<%= budget._id %>"
          method="POST"
          style="display: inline"
        >
          <button type="submit">Delete</button>
        </form>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
